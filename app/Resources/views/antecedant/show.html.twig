{% extends 'base.html.twig' %}

{% block body %}
    <h1>Antecedant</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ antecedant.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ antecedant.code }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if antecedant.dateDebut %}{{ antecedant.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if antecedant.dateFin %}{{ antecedant.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('antecedant_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('antecedant_edit', { 'id': antecedant.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
