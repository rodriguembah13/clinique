{% extends 'base.html.twig' %}

{% block body %}
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="x_title">Patient creation</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="{{ path('patient_index') }}">Patient</a></li>
                <li class="breadcrumb-item active">Create</li>
            </ol>
        </div>
    </div>
    <form action="{{ path('medecin_new') }}" method="post" class="form-horizontal form-label-left">

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        <div class="form-group">
            {# Génération du label. #}
            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                {{ form_label(form.nomComplet, "Nom ") }}
            </div>
            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.nomComplet) }}
            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                {# Génération de l'input. #}
                {{ form_widget(form.nomComplet) }}
            </div></div>

        {# Idem pour un autre champ. #}
        <div class="form-group">
            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                {{ form_label(form.telephone, "telephone") }}</div>

            {{ form_errors(form.telephone) }}
            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                {{ form_widget(form.telephone) }}
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                {{ form_label(form.adresse, "adresse") }}</div>

            {{ form_errors(form.adresse) }}
            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                {{ form_widget(form.adresse) }}
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                {{ form_label(form.numDossier, "numDossier") }}</div>

            {{ form_errors(form.adresse) }}
            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                {{ form_widget(form.numDossier) }}
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                {{ form_label(form.sexe, "sexe") }}</div>

            {{ form_errors(form.sexe) }}
            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                {{ form_widget(form.sexe) }}
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                {{ form_label(form.dateNaissance, "dateNaissance") }}</div>

            {{ form_errors(form.dateNaissance) }}
            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                {{ form_widget(form.dateNaissance) }}

            </div><span class="add-on"><i class="icon-th"></i></span>
        </div>
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <button class="btn btn-primary" type="button">Cancel</button>
                <button class="btn btn-primary" type="reset">Reset</button>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
        {{ form_rest(form) }}

    </form>
    <div class="row m-md-2">
        <a class="btn btn-dark" href="{{ path('patient_index') }}"><i class="fa fa-arrow-left"></i>Back to the list</a>
    </div>
{% endblock %}
