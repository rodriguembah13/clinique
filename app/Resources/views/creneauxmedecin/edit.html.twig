
    {% extends 'base.html.twig' %}
    {% block body %}
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="x_title">Creneau Edit</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="{{ path('creneauxmedecin_index') }}">Creneaux Medecin</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
        <form action="{{ path('creneauxmedecin_new') }}" method="post" class="form-horizontal form-label-left">

            {# Les erreurs générales du formulaire. #}
            {{ form_errors(edit_form) }}

            <div class="form-group">
                {# Génération du label. #}
                <div class="control-label col-md-3 col-sm-3 col-xs-12">
                    {{ form_label(edit_form.codeCrenneaux, "Libelle ") }}
                </div>
                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(edit_form.codeCrenneaux) }}
                <div class="control-label col-md-3 col-sm-3 col-xs-12">
                    {# Génération de l'input. #}
                    {{ form_widget(edit_form.codeCrenneaux) }}
                </div></div>

            {# Idem pour un autre champ. #}
            <div class="form-group">
                <div class="control-label col-md-3 col-sm-3 col-xs-12">
                    {{ form_label(edit_form.heureDebut, "heureDebut") }}</div>

                {{ form_errors(edit_form.heureDebut) }}
                <div class="control-label col-md-3 col-sm-3 col-xs-12">
                    {{ form_widget(edit_form.heureDebut) }}
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-3 col-sm-3 col-xs-12">
                    {{ form_label(edit_form.heureFin, "heureFin") }}</div>

                {{ form_errors(edit_form.heureFin) }}
                <div class="control-label col-md-3 col-sm-3 col-xs-12">
                    {{ form_widget(edit_form.heureFin) }}
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-3 col-sm-3 col-xs-12">
                    {{ form_label(edit_form.medecin, "medecin") }}</div>

                {{ form_errors(edit_form.medecin) }}
                <div class="control-label col-md-3 col-sm-3 col-xs-12">
                    {{ form_widget(edit_form.medecin) }}
                </div>
            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <button class="btn btn-primary" type="button">Cancel</button>
                    <button class="btn btn-primary" type="reset">Reset</button>
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>
            {{ form_rest(edit_form) }}

        </form>
        <div class="row m-md-2">
            <a class="btn btn-dark" href="{{ path('creneauxmedecin_index') }}"><i class="fa fa-arrow-left"></i>Back to the list</a>
        </div>
    {% endblock %}

